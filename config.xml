<?xml version='1.0' encoding='utf-8'?>
<widget id="com.kauczuk79.obddashboard" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>OBDDashboard</name>
    <description>
        OBD2 monitoring application
    </description>
    <author email="kauczuk79@gmail.com" href="https://github.com/kauczuk79/OBDDashboard">
        Robert Weso≈Çowski
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <engine name="windows" spec="~4.4.3" />
</widget>